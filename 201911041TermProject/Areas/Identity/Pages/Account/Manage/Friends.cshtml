@page
@model _201911041TermProject.Areas.Identity.Pages.Account.Manage.FriendsModel
@{
    ViewData["Title"] = "My Friends";
}


@if (Model.FriendList.Count > 0)
{
    @foreach (var friend in Model.FriendList)
    {
        <div class="row mx-auto">
            <div class="col-12 col-lg-6">
                @friend.FirstName  @friend.LastName
            </div>
            <div class="col-12 col-lg-6">
                <div class="row mx-auto">
                    <div class="col-12 col-lg-6">
                        <form method="post" asp-page-handler="DeleteFriend" asp-route-deleteUserId="@friend.Id">
                            <button class="btn btn-outline-primary">Delete Friend</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}

else
{
    <h1 class="text-danger text-center">There is no friends</h1>
}

