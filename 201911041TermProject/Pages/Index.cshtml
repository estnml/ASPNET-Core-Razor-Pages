@page
@model IndexModel

@using Microsoft.AspNetCore.Identity
@using _201911041TermProject.Models

@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Home page";
}

<style>

    #brand {
        font-family: 'Pacifico', cursive;
        text-transform: uppercase;
    }
</style>

@if (!SignInManager.IsSignedIn(User))
{
    <p class="text-center display-6">Welcome to</p>
    <p class="text-center display-5" id="brand">canbookram</p>
    <hr class="w-50 mx-auto" />
    <p class="text-center fw-bold">We're glad you are here! Now you can discover & follow users around the globe.</p>
    <p class="text-center fw-bold">Register or create a new account to start your journey.</p>
    <hr class="w-50 mx-auto" />
    <div class="row mx-auto text-center">
        <div class="col-sm-12 col-md-6 d-sm-inline-flex justify-content-end">
            <a class="d-inline-block btn btn-outline-info" asp-area="Identity" asp-page="/Account/Register">I dont have an account</a>
        </div>
        <div class="col-sm-6 col-md-6 d-sm-inline-flex justify-content-start">
            <a class="d-inline-block btn btn-outline-success" asp-area="Identity" asp-page="/Account/Login">I have an account</a>
        </div>
    </div>

}
